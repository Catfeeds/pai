.tit{
	width:100%;
	font-family:SourceHanSansCN-Bold;
	background-color: #fff;
	padding-top: 0.74rem;
}
.tit p{
	width: 90%;
	margin:0 auto;
	font-size: 0.48rem;
	color:#000000;
	margin-bottom: 0.4rem;
	font-weight: 600;
}
.amnesia_login{
	width:6.9rem;
	margin:0 auto;
	padding-top: 0.225rem;
	padding-bottom: 0.225rem;
	border-bottom:0.01rem solid #e2e2e2;
}
.amnesia_login input{
	margin-left:0.5rem; 
	font-size: 0.28rem;
}
.amnesia_login .amnesia_code{
	margin:0;
	margin-top: 0.1rem;
}
.amnesia_btn{
	width:1.54rem;
	height:0.544rem;
	background-color: #fff;
	border:0.02rem solid #000000;
	border-radius: 0.3rem;
	text-align: center;
	line-height: 0.544rem;
	font-size: 0.24rem;
	color:#2b2b2b;
}
.amnesia_save{
	width:6.9rem;
	height:0.88rem;
	background-image: linear-gradient(0deg, 
		#DDDDDD 0%, 
		#EFEFEF 100%), 
	linear-gradient(
		#DDDDDD, 
		#DDDDDD);
	color:#aaaaaa;
	margin:0 auto;
	text-align: center;
	line-height: 0.88rem;
	margin-top: 0.6rem;
	font-family:SourceHanSansCN-Medium;
	font-size: 0.32rem;
	font-weight: 600;
	border-radius: 0.18rem;
}
.amnesia_save_yew{
	background-image: linear-gradient(0deg, 
		#FFD800 0%, 
		#FFE500 100%), 
	linear-gradient(
		#FFD800, 
		#FFD800);
	color:#000000;
}
.sms{
	position: absolute;
    right: 0;
    top: 0.23rem;
    width: 2.2rem;
    height: 0.6rem;
    border: 0.02rem solid #000000;
    font-size: 0.24rem;
    line-height: 0.6rem;
    text-align: center;
    color: #2B2B2B;
    border-radius: 0.3rem;
    background-color: transparent;
}