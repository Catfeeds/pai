.bookcard_view{
    width:6.3rem;
    height:3.4rem;
    margin:0 auto;
    background: #fff;
    border-radius: 0.24rem;
    margin-top: 0.48rem;
    padding-top: 0.2rem;
}
.bookcard_img{
    width:1.5rem;
    height:1.5rem;
    margin:0 auto;
}
.bookcard_img img{
    width:100%;
    height:100%;
}
.bookcard_view p,.bookcard_view span{
    text-align: center;
}
.bookcard_view p{
    color:#000000;
    font-size: 0.32rem;
    font-weight: 600;
    margin-bottom: 0.23rem;
}
.bookcard_view span{
    display: block;
    color:#aaaaaa;
    font-size: 0.24rem;
}
.bookcard_btn{
    width:7.5rem;
    height:1rem;
    background:#FFE500 ;
    text-align: center;
    line-height: 1rem;
    text-align: center;
    color:#000000;
    font-size: 0.32rem;
    position: fixed;
    bottom:0;
    left: 0;
    font-weight: 600;
}
.bookcard_yes{
    width: 6.3rem;
    height: 3.4rem;
    margin: 0 auto;
    margin-top: 0.48rem;
    padding-top: 0.2rem;
    background: url("../../image/wallet/cardyes@2x.png") no-repeat center;
    background-size: 100% 100% ;
}

.bookcard_yes p{
    font-size:0.3rem;
    font-weight:bold;
    color:rgba(255,255,255,1);
    line-height:0.3rem;
    margin-left: 0.89rem;
    padding-top: 0.73rem;
}
.bookcard_yes span{
    display: block;
    font-size:0.3rem;
    font-weight:600;
    color:rgba(255,255,255,1);
    line-height:0.3rem;
    margin-left: 0.86rem;
    padding-top: 1rem;
}
.yzm-view {
    background: #fff;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 100;
    display: none;
}
.yzm-title {
    margin: 1.4rem 0.3rem 0 0.3rem;
    font-size: 0.36rem;
    font-weight: bold;
    color: #333;
}
.yzm-cont {
    font-size: 0.28rem;
    color: #999;
    margin: 0.3rem;
}
.yzm-cont span {
    color: #333;
}
.yzm-input {
    height: 0.8rem;
    border-bottom: 1px solid #EEEEEE;
    position: relative;
    margin: 0 0.3rem;
}
.yzm-input input {
    width: 100%;
    height: 100%;
}
.bangdingcard_code {
    border: 1px solid #333;
    color: #333;
    background: none;
    position: absolute;
    right: 0;
    top: 0.1rem;
    border-radius: 0.3rem;
    padding: 0.1rem 0.2rem;
}
.yzm-btn {
    height:0.88rem;
    background:#FFE500;
    border-radius:0.18rem;
    text-align: center;
    font-size: 0.32rem;
    font-weight: bold;
    line-height: 0.88rem;
    margin: 1rem 0.3rem 0 0.3rem;
}