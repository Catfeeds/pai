.store-list-item {
    margin: 0.1rem 0 0 0;
    background: #fff;
    padding: 0.5rem 0.5rem 0.8rem 0.5rem;
}
.store-list-title {
    position: relative;
    height: 0.68rem;
}
.store-list-logo {
    position: absolute;
    width:0.68rem;
    height:0.68rem;
    border-radius:0.1rem;
    box-shadow:0px 0px 0.1rem rgba(204,204,204,0.5);
    left: 0;
    top: 0;
}
.store-list-logo img {
    width: 100%;
    height: 100%;
}
.store-list-title h3 {
    height: 0.68rem;
    line-height: 0.68rem;
    margin: 0 1.3rem 0 0.88rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 0.28rem;
    font-weight: bold;
    color: #333;
}
.store-list-title a {
    display: block;
    width:1.26rem;
    height:0.48rem;
    background:linear-gradient(90deg,rgba(255,212,0,1),rgba(255,232,0,1));
    border-radius:0.1rem;
    position: absolute;
    right: 0;
    top: 0.1rem;
    color: #333;
    text-align: center;
    line-height: 0.48rem;
    font-size: 0.24rem;
    font-weight: bold;
    border: 1px solid #FFD400;
}
.store-list-img {
    margin: 0.3rem 0 0 0;
}
.store-list-img:after {
    clear: both;
    display: table;
    content: '';
}
.store-img-item {
    float: left;
    width: 1.96rem;
    height: 1.96rem;
    margin: 0 0.2rem 0 0;
    position: relative;
    box-shadow:0px 0px 0.1rem rgba(204,204,204,0.5);
}
.store-img-item:nth-last-child(1){
    margin-right: 0;
}
.store-img-item img {
    width: 100%;
    height: 100%;
}
.store-img-item span {
    position: absolute;
    right: 0;
    bottom: 0;
    padding: 0 0.1rem;
    background: #666666;
    font-size: 0.2rem;
    color: #fff;
    opacity:0.5;
}
.store-list-tag {
    margin: 0.1rem 0 0 0;
}
.store-list-tag i {
    border-radius:0.16rem;
    padding: 0.01rem 0.2rem 0.05rem 0.2rem;
    font-size: 0.2rem;
    color: #fff;
    margin: 0 0.2rem 0 0;
    font-style: normal;
}
.store-list-tag .new {
    background:#FDB63C;
}
.store-list-tag .hot {
    background: #E54545;
}
.store-list-check {
    display: none;
    width: 0.32rem;
    height: 0.32rem;
    position: absolute;
    right: 0.4rem;
    top: 0.17rem;
    background: url(/static/image/goodscollection/icon_favorite_box_unselect@2x.png) no-repeat;
    background-size: 99%;
}
.store-list-item .select {
    background: url(/static/image/goodscollection/icon_favorite_box_select@2x.png) no-repeat;
    background-size: 99%;
}
.bh {
    height: 0.98rem;
    display: none;
}
.store-panel {
    display: none;
    height: 0.98rem;
    background: #fff;
    position: fixed;
    bottom: 0;
    width: 7.5rem;
    left: 0;
    z-index: 99;
    box-shadow:1px 0px 16px rgba(191,191,191,0.43);
}
.checkAll {
    width: 1.1rem;
    height: 0.32rem;
    background: url(/static/image/goodscollection/icon_favorite_box_unselect@2x.png) no-repeat left;
    background-size: 0.32rem;
    line-height: 0.32rem;
    padding: 0 0 0 0.42rem;
    font-size: 0.26rem;
    color: #333;
    margin: 0.33rem 0 0 0.5rem;
}
.store-panel .select {
    background: url(/static/image/goodscollection/icon_favorite_box_select@2x.png) no-repeat left;
    background-size: 0.32rem;
}
.store-panel button {
    width:1.6rem;
    height:0.6rem;
    background:#FFD400;
    border-radius:0.1rem;
    position: absolute;
    right: 0.5rem;
    top: 0.19rem;
    color: #000;
    font-size: 0.26rem;
    font-weight: bold;
    border: 0;
}
.store-good-title {
    height: 0.8rem;
    line-height: 0.9rem;
    text-align: center;
    font-size: 0.28rem;
    color: #333;
    font-weight: bold;
}
.store-good {
    display: none;
}