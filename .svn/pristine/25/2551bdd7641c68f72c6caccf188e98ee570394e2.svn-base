{extend name="common/base" /}
{block name="style"}
<style>
    .Hui-article-box{
        overflow: auto;
    }
</style>
{/block}
{block name="header"}
{include file="common/header" /}
{/block}
{block name="menu"}
{include file="common/menu" /}
{/block}

{block name='content'}

<section class="Hui-article-box">
    <nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 产品管理 <span class="c-gray en">&gt;</span> 产品列表 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
        <div style="margin-left:50px;">
            <div class="pd-20">
                <!--<div class="text-c">-->
                    <!--<input type="text" name="" id="" placeholder=" 产品名称" style="width:250px" class="input-text">-->
                    <!--<button name="" id="" class="btn btn-success" type="submit"><i class="Hui-iconfont">&#xe665;</i> 搜产品</button>-->
                <!--</div>-->
                <div>
                    <span>商品状态：</span>
                    <a href="/business/pointgoods/goods_list/g_state/0" type="button" class="btn {eq name='g_state' value='0'}btn-success {else /} btn-info {/eq} btn-xs">全部</a>
                    <a href="/business/pointgoods/goods_list/g_state/1" type="button" class="btn {eq name='g_state' value='1'}btn-success {else /} btn-info {/eq} btn-xs">竞拍中</a>
                    <a href="/business/pointgoods/goods_list/g_state/2" type="button" class="btn {eq name='g_state' value='2'}btn-success {else /} btn-info {/eq} btn-xs">草稿</a>
                    <a href="/business/pointgoods/goods_list/g_state/3" type="button" class="btn {eq name='g_state' value='3'}btn-success {else /} btn-info {/eq} btn-xs">审核中</a>
                    <a href="/business/pointgoods/goods_list/g_state/4" type="button" class="btn {eq name='g_state' value='4'}btn-success {else /} btn-info {/eq} btn-xs">已失败</a>
                </div>
                <div class="mt-20">
                    <table class="table table-border table-bordered table-bg table-hover table-sort">
                        <thead>
                        <tr class="text-c">
                            <th width="100" >商品ID</th>
                            <th width="60">商品名称</th>
                            <th width="100">图片</th>
                            <th width="100">库存</th>
                            <th width="100">积分首页排序(从大到小)</th>
                            <!--<th width="100">置顶排序</th>-->
                            <!--<th width="100">推荐排序</th>-->
                            <th width="100">市场价格</th>
                            <th width="100">结算价格</th>
                            <th width="100">截止时间</th>
                            <th width="100">状态</th>
                            <th width="100">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {volist name='list' id='vo'}
                            <tr class="text-c va-m tr_{$vo.g_id}">
                                <td>{$vo.g_id}</td>
                                <td>{$vo.g_name}</td>
                                <td><img src="{$vo.g_img}" alt="" width="50" height="50"></td>
                                <td class="gp_stock{$vo.g_id}">{$vo.gp_stock}</td>
                                <td class="is_heat{$vo.g_id}">{if condition='$vo.is_heat==0'}非热拍{else /}{$vo.is_heat}{/if}</td>
                                <!--<td class="is_top{$vo.g_id}">{if condition='$vo.is_top==0'}非置顶{else /}{$vo.is_top}{/if}</td>-->
                                <!--<td class="is_tj{$vo.g_id}">{if condition='$vo.is_tj==1'}非推荐{else /}{$vo.is_tj}{/if}</td>-->
                                <td>￥{$vo.gp_market_price}</td>
                                <td>￥{$vo.gp_settlement_price}</td>
                                <td>{$vo.g_endtime|date='Y-m-d H:i',###}</td>
                                <td>{switch name="vo.g_state"}
                                    {case value="1"}未支付保证金{/case}
                                    {case value="2"}审核中{/case}
                                    {case value="4"}已失败{/case}
                                    {case value="6"}竞拍中{/case}
                                    {case value="7"}编辑中{/case}
                                    {case value="8"}已流拍{/case}
                                    {/switch}</td>
                                <td>
                                    {if condition='$vo.is_heat > 0'}
                                    <button type="button" class="btn btn-success btn-xs rh_{$vo.g_id}" onclick="revoke_heat('{$vo.g_id}')">撤下首页精选</button>
                                    {/if}
                                    {switch name="vo.g_state"}
                                        {case value="1"}<button type="button" class="btn btn-warning btn-xs" onclick="cancel('{$vo.g_id}')">下架</button>{/case}
                                        {case value="2" }<button type="button" class="btn btn-warning btn-xs" onclick="cancel('{$vo.g_id}')">下架</button>
                                                         <a href="/business/pointgoods/reedit/g_id/{$vo.g_id}"  type="button" class="btn btn-success btn-xs">再次编辑</a>
                                        {/case}
                                        {case value="4"}<button type="button" class="btn btn-warning btn-xs" onclick="cancel('{$vo.g_id}')">下架</button>
                                                        <a href="/business/pointgoods/reedit/g_id/{$vo.g_id}" type="button" class="btn btn-info btn-xs">重新编辑</a>
                                        {/case}
                                        {case value="6"}<button type="button" class="btn btn-primary btn-xs" onclick="gp_stock('{$vo.g_id}','{$vo.gp_stock}')">修改库存</button>
                                                        <button type="button" class="btn btn-primary btn-xs" onclick="is_heat('{$vo.g_id}','{$vo.is_heat}')">首页排序</button>
                                                        <!--<button type="button" class="btn btn-primary btn-xs" onclick="is_top('{$vo.g_id}','{$vo.is_top}')">顶置</button>-->
                                                        <!--<button type="button" class="btn btn-primary btn-xs" onclick="is_tj('{$vo.g_id}','{$vo.is_tj}')">推荐</button>-->
                                            {/case}
                                        {case value="7"}<a href="/business/pointgoods/reedit/g_id/{$vo.g_id}"  type="button" class="btn btn-info btn-xs">继续编辑</a>
                                                        <button type="button" class="btn btn-warning btn-xs" onclick="cancel('{$vo.g_id}')">下架</button>
                                        {/case}
                                        {case value="8"}<a href="/business/pointgoods/reedit/g_id/{$vo.g_id}"  type="button" class="btn btn-success btn-xs">再次编辑</a>{/case}
                                    {/switch}
                                </td>
                            </tr>
                        {/volist}
                        </tbody>
                    </table>
                </div>
                <div >共{$total_num}页 {$page}</div>
            </div>
        </div>

    </div>
</section>
{/block}
{block name="footer"}
{include file="common/footer" /}
