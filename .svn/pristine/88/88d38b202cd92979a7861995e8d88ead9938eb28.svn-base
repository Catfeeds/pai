{block name="content"}
<main>
    <div class="refund_main">
        <div class="refund_view clear">
            <div class="refund_img lf">
                <img src="__STATIC__/image/orderpai/icon_jindu@2x.png">
            </div>
            {if condition="$refund_info.o_paystate == 4"}
            <!--退款完成-->
            <div class="refund_new lf">
                <div class="refund_first">
                    <p>退款已成功</p>
                    <span>退回的款项已返还至您的积分账户</span>
                    </br>
                    {notempty name="refund_info.refund_info.pl_time"}
                    <span>{$refund_info.refund_info.pl_time|date='Y-m-d H:i',###}</span>
                    {/notempty}
                </div>
                <div class="success_list">
                    <p>退款已发起</p>
                    {if condition="$is_lord ==1"}
                    
                    <span>未成团商品 系统将自动退款</span>
                    {else/}
                   <span>商品未成团 系统将自动退款</span>
                   
                    {/if}
                    </br>
                    {notempty name="$refund_info.refund_info.pl_time"}
                    <span>{$refund_info.refund_info.pl_time|date='Y-m-d H:i',###}</span>
                    {/notempty}
                </div>
            </div>
            {else/}
            <!--退款中-->
            <div class="refund_new lf">
                <div class="refund_first">
                    <p>退款已发起</p>
                    {if condition="$is_lord ==1"}
                    
                    <span>未成团商品 系统将自动退款</span>
                    {else/}
                    <span>未团中商品 系统将自动退款</span>
                   
                    {/if}
                    </br>
                    {notempty name="$refund_info.refund_info.pl_time"}
                    <span>{$refund_info.refund_info.pl_time|date='Y-m-d H:i',###}</span>
                    {/notempty}
                </div>
                <div class="success_list">
                    <p>退款已成功</p>
                    <span>退回的款项已返还至您的积分账户</span>
                    </br>
                    {notempty name="$refund_info.refund_info.pl_time"}
                    <span>{$refund_info.refund_info.pl_time|date='Y-m-d H:i',###}</span>
                    {/notempty}
                </div>
            </div>
            {/if}


        </div>
    </div>
    <div class="refund_bot">
        <div class="refund_bot_list clear">
            <span>订单编号</span>
            <span class="refund_bot_rt rt">{$refund_info.o_sn}</span>
        </div>
        <div class="refund_bot_list clear">
            <span>退款金额</span>
            <span class="refund_bot_rt rt">{$refund_info.refund_info.pl_num|default=0}积分</span>
        </div>
        <div class="refund_bot_list clear">
            <span>退款原因</span>
            <span class="refund_bot_rt rt">系统自动退款</span>
        </div>
    </div>

</main>
{/block}
{block name="script"}
