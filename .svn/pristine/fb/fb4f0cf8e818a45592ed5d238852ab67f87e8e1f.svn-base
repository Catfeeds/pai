.introduction_top{
    width:7.5rem;
    /*height:1.88rem;*/
    background: #fff;
    padding-top:0.34rem;
    padding-bottom:0.34rem;
}
.introduction_head{
    width:1.2rem;
    height:1.2rem;
    overflow: hidden;
    border:0.01rem solid #f2f2f2;
    position: relative;
    border-radius: 0.12rem;
    box-shadow:0px 0px 28px rgba(201,201,201,0.46);
    margin-left: 0.3rem;
}
.introduction_head input{
    width:100%;
    height:100%;
    position: absolute;
    top:0;
    left: 0;
    opacity: 0;
    z-index: 3;
}
.introduction_head img{
    width:100%;
    height:100%;
    object-fit: cover;
}
/*#introduction_img{*/
    /*width:100%;*/
    /*height:100%;*/
/*}*/
.introduction_mod{
    position: absolute;
    z-index: 2;
    bottom:0;
    left: 0;
    height:0.36rem;
    width:100%;
    background:rgba(0,0,0,0.2);
    font-size:0.24rem;
    color:#fff;
    text-align: center;
    line-height: 0.36rem;
}
.introduction_head_name{
    margin-left: 0.4rem;
    margin-top: 0.15rem;
}
.introduction_head_name p{
    font-size: 0.32rem;
    color:#333333;
    font-weight: 600;
    margin-bottom: 0.04rem;
}
.introduction_head_name span{
    color:#666666;
    font-size:0.24rem;
}
.introduction_head_guanzhu{
    width:1.2rem;
    height:0.56rem;
    background-image: linear-gradient(0deg,
    #FFD800 0%,
    #FFFD50 100%),
    linear-gradient(
            #FFD800,
            #FFD800);
    font-size:0.24rem;
    color:#010101;
    font-weight: 600;
    text-align: center;
    line-height: 0.56rem;
    margin-right: 0.3rem;
    margin-top: 0.3rem;
    border-radius: 0.08rem;
}
.introduction_bg{
    border-top:0.01rem solid #f2f2f2;
    width:7.5rem;
    height:0.88rem;
    line-height: 0.88rem;
    background: #fff;
}
.introduction_bg span{
    margin-left: 0.3rem;
    font-size: 0.28rem;
    color:#000000;
}
.introduction_bg img{
    width:0.44rem;
    height:0.44rem;
    display:inline-block;
    margin-left: 0rem;
    margin-right: 0.3rem;
}
.introduction_bg .introduction_class{
    display: inline-block;
    width:1.4rem;
    margin-right: 0.3rem;
}
.introduction_view{
    margin-top: 0.14rem;
}
.introduction_bg .introduction_color{
    color:#FFBA00;
    font-size: 0.28rem;
}
