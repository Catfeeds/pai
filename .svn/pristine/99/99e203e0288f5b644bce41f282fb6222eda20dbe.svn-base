body{
	background: #f2f2f2;
}

.address_main{
	width:100%;
	padding-bottom: 1rem;
	padding-top:0.01rem;
}
.address_list{
	width:6.9rem; 
	margin:0 auto;
	background-color: #fff;
	margin-top: 0.3rem;
	padding-bottom: 0.3rem;
	border-radius: 0.24rem;
	
}
.address_list:last-child{
    margin-bottom: 0.3rem;
}
.address_noview{
	background: #fff;
	border-radius: 0.24rem;
	overflow: hidden;
	margin-top: 0.2rem;
	/*width:7.5rem;*/
}
.address_noview p{
	text-align: center;
	font-size: 0.32rem;
	color:#000000;
	margin-bottom: 0.76rem;
	margin-top: 0.36rem;
	font-weight: 600;
}
.address_nomain{
	width:0.56rem;
	height:0.56rem;
	margin: 0 auto;
	margin-top:0.74rem;
	/* margin-top: 3.65rem; */
}
.address_nomain img{
	width:100%;
	height:100%;
}
.address_con{
	width:90%;
	margin:0 auto;
}
.address_name{
	color:#000000;
	font-size: 0.28rem;
	/*font-size: 0.3rem;*/
	color:#4d4d4d;
	padding-top: 0.3rem;
	font-weight: 600;
}
.address_pad{
	padding-top: 0.25rem;
	color:#999999;
	font-size: 0.24rem;
	font-weight:600;
}
.address_site{
	margin-top: 0.5rem;
	border-top:0.01rem solid #e6e6e6;
	padding-top:0.3rem;
	position: relative;
}
.address_icon{
	width:0.28rem;
	height:0.28rem;
	margin-right: 0.1rem;
	vertical-align: middle;
}
.address_text{
	vertical-align: middle;
	color:#4c4c4c;
	font-size: 0.26rem;
}
.address_dele{
	 margin-left: 0.3rem;
	 display: inline-block;
}
.address_dele img{
	width:0.34rem;
	height:0.34rem;
	vertical-align: middle;
}
.address_dele span{
	vertical-align: middle;
	color:#4c4c4c;
	font-size: 0.26rem;
}
.address_btn{
	width:100%;
	height:1rem;
	background-color:#FFE500;
	line-height: 1rem;
	text-align: center;
	color:#fff;
	font-size: 0.32rem;
	color:#000000;
	font-weight: 600;
}
.address-msg {
	height: 0.88rem;
	font-size: 0.24rem;
	line-height: 0.88rem;
	color: #F6AB0B;
	padding: 0 0.3rem;
	background: #FFFBDA;
	display: none;
}
.addr{
	width:100%;
	height:1rem;
	position: fixed;
	bottom:0;
	left: 0;
	background: transparent;
}

.layui-layer-dialog .layui-layer-content{
	text-align: left !important;
}
.layui-layer-dialog .layui-layer-content p span{
	float: none !important;
}