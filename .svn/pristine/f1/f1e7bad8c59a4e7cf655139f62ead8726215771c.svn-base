<body>
<div class="container" style="margin-left:0;margin-right:0;">
<div class="row" id="content">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>添加证书</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <form method="post" class="form-horizontal" action="{:url('prove/add_do')}" id="add_link" enctype="multipart/form-data">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">证书名称 (Name)</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" name="p_name">
                        </div>
                    </div>
					
                    <div class="form-group">
                        <label class="col-sm-2 control-label">图片 (picture)</label>
                        <div class="col-md-4">
                            <input type="file" class="form-control" id="p_image" name="p_image" aria-required="true" aria-invalid="true">
                            <span class="help-block m-b-none"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">内容</label>
                        <div class="col-md-5">
                            <script id="container" name="p_content" type="text/plain"></script>
                            <span class="help-block m-b-none"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
							<!-- <input type="hidden" name="_method" value="PUT" > -->
                            <button class="btn btn-primary" type="submit">添加</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</body>

<script type="text/javascript">
var i=2;
var j=0;
var k=-2;
function myFunction(){	
	var textnode = '<div class="org"><div class="col-md-6"  style="padding-left:0px;"><input type="text" class="form-control" name="organi_name[]" value="" placeholder="属性名"></div><div class="col-md-6" style="margin-bottom:5px;padding-left:0px;"><input type="text" class="form-control" name="organi_value[]" value="" placeholder="属性值"></div></br></br></div>';
	var list = document.getElementById("org");
	$(textnode).insertAfter(list);
	i = i+1;
}

function removeLastOption()
{
	if(j==0){
		j = i-3;
	}
	if(k==-2){
		k=j;
	}	
	//console.log(i);
	$(".org:eq("+k+")").remove();
	k = k-1;
	i = i-1;  
}

</script>

