{extend name="common/base" /}
{block name="style"}
<link rel="stylesheet" type="text/css" href="__ADMIN_LIB_CLEARMINMASTER_CSS__/summernote.css">
<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/add_admin.css">
<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/goodscategory.css">
{/block}
{block name="content"}
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group  from_add_authority">
                <label>商品规格列表</label>
                <a class="pull-right" href="{:url('goodstype/edit')}">添加分类</a>
            </div>
            <table class="table table-hover" style="margin-bottom:0">
                <thead>
                <tr>
                    <th>商品规格ID</th>
                    <th>商品规格名称</th>
                    <th>父级分类</th>
                    <th>商品规格层级</th>
                    <th>分类状态</th>
                    <th>商品规格管理</th>
                </tr>
                </thead>
                <tbody>
                <tbody>
                {empty name="list"}
                <tr>
                    <td colspan="20">没有数据</td>
                </tr>
                {else/}
                {volist name="$list" id="vo"}
                <tr>
                    <th scope="row" class="sid">{$vo.gt_id}</th>
                    <td>{$vo.gt_name}</td>
                    <td>{$vo.pname}</td>
                    <td>{$vo.gt_level}</td>
                    <td>{if condition="$vo.gt_state == 0"}显示{else/}不显示{/if}</td>
                    <td>
                        <a href="{:url('goodstype/edit',['gt_id' => $vo.gt_id])}">
                            编辑
                        </a>
                        <a href="{:url('goodstype/delete',['gt_id' => $vo.gt_id])}" class="dele_btn">
                            删除
                        </a>
                    </td>
                </tr>
                {/volist}
                {/empty}
                </tbody>
            </table>
        </div>
    </div>
</div>

{/block}

