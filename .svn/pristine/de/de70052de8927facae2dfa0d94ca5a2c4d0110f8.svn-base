.header_nav {
    background: none;
    border-bottom: none;
}

.header_nav .miao {
    width: 1.79rem;
    height: 0.81rem;
    margin-top: 0.2rem;
}

.sec_top_img {
    width: 100%;
    height: 3rem;
}

.seckill_top {
    width: 6.9rem;
    height: 4.8rem;
    background: url("../../image/seckill/icon_ban@2x.png");
    background-size: 100%;
    position: absolute;
    top: 1.38rem;
    left: 0;
    right: 0;
    margin: auto;
    padding: 0.1rem 0.28rem 0.1rem 0.28rem;
    box-sizing: border-box;
}

.seckill_top {

}

.seckill_time {
    position: relative;
    z-index: 10;
}

.seckill_time ul {
    display: flex;
    flex-flow: nowrap;
    justify-content: space-around;
}

.seckill_time_item {
}

.seckill_time_item:nth-last-child(1) {
    margin-right: 0;
}


.seckill_time_item p {
    font-size: 0.12rem;
    color: #808080;
}

.seckill_time_item img {
    width: 0.86rem;
    height: 0.22rem;
}

.seckill_time_item img.over, .seckill_time_item img.seckill_ing {
    width: 0.64rem;
}
.tuijian{
    width: 1.8rem;
    height: 1.4rem;
    position: absolute;
    top: -0.2rem;
    left:2.4rem;
}
.xianshi{
    width: 1.56rem;
    height: 0.28rem;
    margin-top: 0.2rem;
    margin-bottom: 0.1rem;
}
.pro_item{
    width: 25%;
    float: left;
}
.pro_item img{
    width: 1rem;
    height: 1rem;
    background: red;
    margin-left: 0.2rem;
}
.pro_item img.qiangwan{
    width: 1.28rem;
    height: 0.2rem;
    background:none;
    display: block;
    margin: 0.15rem auto;
}
.pro_name{
    font-size:0.24rem;
    font-weight:400;
    color:rgba(21,21,21,1);
    line-height:0.4rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 0.2rem;
}
.seckill_price{
    font-size:0.3rem;
    font-weight:bold;
    color:rgba(255,53,53,1);
    text-align: center;
}
.seckill_price span{
    font-size: 0.12rem;
}
.seckill_old_price{
    font-size:0.22rem;
    font-weight:300;
    text-decoration:line-through;
    color:rgba(170,170,170,1);
    text-align: center;
}
.cutdown{
    width: 65%;
    margin: 0 auto;
}
.cutdown_num{
    width: 0.36rem;
    height: 0.38rem;
    display: block;
    text-align: center;
    line-height: 0.38rem;
    background-color: #454545;
    font-size:0.2rem;
    font-weight:500;
    color:rgba(255,255,255,1);
    float: left;
    border-radius:0.1rem;
}
.cutdown_mao{
    color: #454545;
    float: left;
    margin-left: 0.1rem;
    margin-right: 0.1rem;
}
.progress{
    width: 1.14rem;
    height: 0.12rem;
    background-color:#F9B2B2;
    border-radius:0.06rem;
    margin: 0.2rem auto;
}
.progress_big{
    width: 2.01rem;
    height: 0.36rem;
    position: relative;
    margin: 0;
    border-radius:0.18rem;
    font-size:0.22rem;
    font-weight:300;
    color:rgba(255,255,255,1);
    text-align: center;
    line-height:0.36rem;
}
.progress_big span{
    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;
    border-radius: 0.18rem;
}
.progress_big span.sheng{
    left: 0.61rem;
    background: none;
    z-index: 10;
}
.progress span{
    background-color:#FF3636;
    /*width: 50%;*/
    height: 100%;
    display: block;
    border-radius:0.18rem;
}
.tishi{
    width: 100%;
    height: 0.88rem;
    margin-top: 3.5rem;
    background: white;
    border-bottom: 0.01rem solid rgba(245,245,245,1);
}
.tishi img{
    width: 5.4rem;
    height: 0.32rem;
    margin-top: 0.26rem;
    margin-left: 0.3rem;
}
.seckill_content_item{
    width: 100%;
    /*height: 2.4rem;*/
    box-sizing: border-box;
    padding-top: 0.2rem ;
    padding-left: 0.2rem;
    background-color: white;
    position: relative;
    border-bottom: 0.01rem solid rgba(245,245,245,1);
}
.item_img{
    width: 2rem;
    height: 2rem;
    background-color: #0C0C0C;
}
.item_biaoqian{
    width: 0.8rem;
    height: 0.48rem;
    position: absolute;
    top: 0.3rem;
    left: 0.3rem;
}
.item_right{
    width: 4.8rem;
}
.item_con{
    width: 90%;
    overflow: hidden;
    /*white-space: nowrap;*/
    text-overflow: ellipsis;
    display: inline-block;

}
/*.item_name{*/
    /*width: 70%;*/
    /**/
/*}*/
.item_middle{
margin-top: 0.1rem;
}
.item_middle img{
    width: 0.3rem;
    height: 0.34rem;
}
.item_price{
    font-size:0.2rem;
    font-weight:600;
    color:rgba(255,93,93,1);
    line-height:0.4rem;
}
.item_price span{
    font-size:0.38rem;
}
.item_old_price{
    font-size:0.2rem;
    font-weight:300;
    text-decoration:line-through;
    color:rgba(170,170,170,1);
    line-height:0.4rem;
}
.item_bottom{
margin-top: 0.1rem ;
}
.item_bottom img{
    width: 1.76rem;
    height: 0.8rem;
}
