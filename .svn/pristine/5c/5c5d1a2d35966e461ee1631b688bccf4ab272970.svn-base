body{
    background: #fff;
}
.tomoney{
    width:7.5rem;
    padding-top:0.32rem;
    padding-bottom: 0.5rem;
}
.tomoney_sum{
    border-top:0.01rem solid #f2f2f2;
}
.tomoney p{
    margin-left: 0.59rem;
    margin-right: 0.59rem;
    color:#000000;
    font-size: 0.24rem;
}
.tomoney_ipt{
    padding: 0;
    position: relative;
}
.tomoney_inp{
    position: relative;
    margin-left:0.59rem;
    margin-right: 0.59rem;
    height: 0.8rem;
    line-height: 0.8rem;
    border-bottom:1px solid #f2f2f2;
}
.tomoney_inp p{
    position: absolute;
    left: 0;
    top:0rem;
    margin:0;
    font-size: 0.26rem;
    color:#000000;
    font-weight: 600;
}
.tomoney_inp input{
    display: block;
    width:3.3rem;
    /* margin:0 auto; */
    text-indent:0.5rem;
    height: 0.6rem;
    font-size: 0.54rem;
    font-weight: 600;
}
.tomoney_inp span{
    color:rgba(255,96,96,1);
    font-size: 0.22rem;
    display: none;
}
.tomoney_money{
    padding-top:0.32rem;
    padding-bottom: 0.32rem;
    color:#aaaaaa;
    font-size: 0.24rem;
    padding-left: 0.59rem;
}
.tomoney_money small{
    padding-right:0.59rem ;
}
.tomoney_btn{
    display: block;
    width:6.9rem;
    height:0.88rem;
    background: #dddddd;
    border-radius: 0.18rem;
    line-height: 0.88rem;
    text-align: center;
    font-size: 0.32rem;
    color:#aaaaaa;
    margin:0 auto;
    margin-top: 0.5rem;
}
.tomoney_btn_bg{
    background-image: linear-gradient(0deg,
    #FFE500 0%,
    #FFED50 100%),
    linear-gradient(
    #FFE500,
    #FFE500);
    color:#000000;
    font-weight: 600;
}
.tomoney_all{
    /* width:1.2rem; */
    /* height:0.48rem; */
    /* line-height: 0.44rem; */
    /* border:1px solid black; */
    position: absolute;
    right: 0.6rem;
    top: 0.2rem;
    color:#6F84FF;
    font-size: 0.3rem;
    font-family:PingFangSC-Medium;
    font-weight: 600;
    /* text-align: center; */
    /* border-radius: 0.1rem; */
}
.tomoney-kf {
    color: #AAAAAA;
    font-size: 0.24rem;
    text-align: center;
    vertical-align: middle;
    margin: 0.3rem 0 0 0;
    text-decoration: underline;
}
.tomoney-kf img {
    width: 0.24rem;
    padding: 0 0.1rem 0 0
}
.tomoney-kf a {
    color: #aaa;
}