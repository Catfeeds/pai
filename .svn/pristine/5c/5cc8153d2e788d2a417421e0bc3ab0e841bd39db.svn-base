.sys_clear{
    width:0.56rem;
    height: 0.56rem;   
    position: fixed;
    top:0.2rem;
    right:0.3rem;
    z-index: 100;

}
.sys_clear img{
    width:100%;
    height:100%;
}
.sys_conten{
    width:7.5rem;
    overflow: hidden;
}
.sys_artificial{
    background: #fff;
    padding: 0.26rem 0.3rem;
}
.sys_img{
    width:0.8rem;
    height:0.8rem;
}
.sys_img img{
    width:100%;
    height:100%;
}
.sys_text{
    width:4.44rem;
    margin-left:0.3rem;
}
.sys_text p{
    font-family:" PingFangSC-Semibold";
    color:#000000;
    font-size: 0.28rem;
    font-weight: 600;
}
.sys_text p img{
    width:0.48rem;
    height:0.28rem;
    margin-left: 0.1rem;
    margin-top: -0.03rem;
}
.sys_text p small{
    display: inline-block;
    background: #FF4D4D;
    color:#fff;
    font-family: "PingFangSC-Semibold";
    margin-left: 0.2rem;
    text-align: center;
    font-size: 0.22rem;
    height:0.36rem;
    line-height: 0.36rem;
}
.sys_text p .sys_dayuan{
    border-radius: 0.18rem;
    width:0.64rem;
}
.sys_text p .sys_tuoyuan{
    border-radius: 0.18rem;
    width:0.5rem;
}
.sys_text p .sys_yuan{
    width:0.36rem;
    border-radius: 50%;
}
.sys_text span{
    color:#aaaaaa;
    font-size: 0.24rem;
    display: block;
    margin-top: 0.1rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-family:"PingFangSC-Light";
    
}
.sys_all{
    width:0.42rem;
    height:0.42rem;
    margin-top: 0.18rem;
}
.sys_all img{
    width:100%;
    height:100%;
    vertical-align: middle;
}
.sys_margin{
    margin-top: 0.2rem;
}
.sys_xitong{
    border-bottom: 1px solid #f2f2f2;
}
.sys_xitong_all{
    margin-top: 0.4rem;
}