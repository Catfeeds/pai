{extend name="common/base" /}
{block name="style"}
<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/add_admin.css">
<link rel="stylesheet" type="text/css" href="__ADMIN_LIB_CLEARMINMASTER_CSS__/summernote.css">
<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/add_admin.css">
<link rel="stylesheet" type="text/css" href="__STATIC__/lib/bootstrap-fileinput-master/css/fileinput.min.css">
<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/edit.css">
{/block}
{block name="script"}
<script type="text/javascript" src="__ADMIN_JS__/add_role.js"></script>
<script type="text/javascript" src="__STATIC__/lib/bootstrap-fileinput-master/js/fileinput.min.js"></script>
<script type="text/javascript" src="__STATIC__/lib/bootstrap-fileinput-master/js/locales/zh.js"></script>
<script src="__ADMIN_LIB_CLEARMINMASTER_JS__/summernote.min.js"></script>
<script src="__ADMIN_LIB_CLEARMINMASTER_JS__/demo/notepad.js"></script>
{/block}
{block name="content"}
<form method="post" action="{:url('Banklogo/add')}" id="add_store_category_form" enctype="multipart/form-data">
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group from_add_authority">
                    <label>添加银行logo</label>
                </div>
                <div class="form-group from_add_margin">
                    <label>银行名称</label>
                    <input type="text" class="form-control" placeholder="银行名称" required name="b_bankname" {notempty name="$info['b_bankname']"} value="{$info.b_bankname}" {/notempty}>
                </div>
                <div class="form-group">
                    <label>银行唯一编码</label>
                    <input type="text" class="form-control" placeholder="银行唯一编码" required name="b_bankcode" {notempty name="$info['b_bankcode']"} value="{$info.b_bankcode}" {/notempty}>
                </div>
                <div class="form-group">
                    <label>对应颜色</label>
                    <input type="text" class="form-control" placeholder="对应颜色" required name="b_bankcolor" {notempty name="$info['b_bankcolor']"} value="{$info.b_bankcolor}" {/notempty}>
                </div>
                <div class="form-group">
                    <label>银行logo</label>
                    <div class="view">
                        <div class="photo"></div>
                        <div class="form-group"></div>
                        <div class="file-loading">
                            <input id="file-4" type="file" required name="b_banklogo" class="file" data-upload-url="#">
                        </div>
                        {notempty name="info.b_banklogo"}
                        <img src="__CDN_PATH__{$info.b_banklogo}" alt="" class="b_banklogo" width="100px" height="100px;" style="position: absolute;top:0;left:150px;"/>
                        {/notempty}
                    </div>
                </div>
            </div>
            <div class="form-group text-right" style="margin-top:20px">
                <input type="hidden" {notempty name="$info.b_id"} value="{$info.b_id}"  {/notempty} name="b_id"/>
                <input type="submit" class="btn btn-primary" value="保存信息"/>
                <input  type="button" class="btn btn-default" value="取消操作"/>
            </div>
        </div>
    </div>
</form>
{/block}

