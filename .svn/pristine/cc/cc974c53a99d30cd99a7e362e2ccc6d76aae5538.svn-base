{extend name="common/base" /}
{block name="style"}
<link rel="stylesheet" type="text/css" href="__ADMIN_LIB_CLEARMINMASTER_CSS__/summernote.css">
<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/add_admin.css">
<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/goodscategory.css">
{/block}
{block name="content"}
<div class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group  from_add_authority">
                <label>商品分类列表</label>
                <a class="pull-right" href="{:url('goodscategory/edit')}">添加分类</a>
            </div>
            <table class="table table-hover" style="margin-bottom:0">
                <thead>
                <tr>
                    <th>商品分类ID</th>
                    <th>分类图片</th>
                    <th>banner图片</th>
                    <th>商品分类名称</th>
                    <th>父级分类</th>
                    <th>商品分类层级</th>
                    <th>是否推荐</th>
                    <th>分类状态</th>
                    <th>商品分类数量</th>
                    <th>商品分类管理</th>
                </tr>
                </thead>
                <tbody>
                <tbody>
                {empty name="list"}
                <tr>
                    <td colspan="20">没有数据</td>
                </tr>
                {else/}
                {volist name="$list" id="vo"}
                <tr>
                    <th scope="row" class="sid">{$vo.gc_id}</th>
                    <td><img src="__CDN_PATH__{$vo.gc_img|default=''}"></td>
                    <td><img src="__CDN_PATH__{$vo.gc_banner_img|default=''}"></td>
                    <td>{$vo.gc_name}</td>
                    <td>{$vo.pname}</td>
                    <td>{$vo.level}</td>
                    <td>{if condition="$vo.gc_is_tj > 0"}是{else/}否{/if}</td>
                    <td>{if condition="$vo.state == 0"}显示{else/}不显示{/if}</td>
                    <td>0</td>
                    <td>
                        <a href="{:url('goodscategory/edit',['gc_id' => $vo.gc_id])}">
                            编辑
                        </a>
                        <a href="{:url('goodscategory/delete',['gc_id' => $vo.gc_id])}" class="dele_btn">
                            删除
                        </a>

                    </td>
                </tr>
                {/volist}
                {/empty}
                </tbody>
            </table>
        </div>
    </div>
</div>

{/block}

