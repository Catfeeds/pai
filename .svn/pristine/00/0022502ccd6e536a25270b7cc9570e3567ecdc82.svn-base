.introduction_top{
    width:7.5rem;
    background: #fff;
    padding-top:0.34rem;
    padding-bottom:0.34rem;
    position: relative;
}
.introduction_top a {
    position: absolute;
    right: 0.3rem;
    top: 0.7rem;
    width: 1.6rem;
    height: 0.44rem;
    line-height: 0.44rem;
    font-size: 0.24rem;
    background: url(../../image/index/icon_nav_jump@2x.png) no-repeat center right;
    background-size: 0.44rem;
}
.introduction_head{
    width:1.2rem;
    height:1.2rem;
    overflow: hidden;
    border:0.01rem solid #f2f2f2;
    position: relative;
    border-radius: 0.12rem;
    box-shadow:0px 0px 28px rgba(201,201,201,0.46);
    margin-left: 0.3rem;
}
.introduction_head input{
    width:100%;
    height:100%;
    position: absolute;
    top:0;
    left: 0;
    opacity: 0;
    z-index: 3;
}
.introduction_head img{
    width:100%;
    height:100%;
    object-fit: cover;
}
.introduction_mod{
    position: absolute;
    z-index: 2;
    bottom:0;
    left: 0;
    height:0.36rem;
    width:100%;
    background:rgba(0,0,0,0.2);
    font-size:0.24rem;
    color:#fff;
    text-align: center;
    line-height: 0.36rem;
}
.introduction_head_name{
    margin-left: 0.4rem;
    margin-top: 0.15rem;
}
.introduction_head_name p{
    font-size: 0.32rem;
    color:#333333;
    font-weight: 600;
    margin-top: 0.2rem;
    width:2.4rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

}
.introduction_head_name span{
    color:#666666;
    font-size:0.24rem;
}
.introduction_head_guanzhu{
    width:1.2rem;
    height:0.56rem;
    background-image: linear-gradient(0deg,
    #FFD800 0%,
    #FFFD50 100%),
    linear-gradient(
            #FFD800,
            #FFD800);
    font-size:0.24rem;
    color:#010101;
    font-weight: 600;
    text-align: center;
    line-height: 0.56rem;
    margin-right: 0.3rem;
    margin-top: 0.3rem;
    border-radius: 0.08rem;
}
.introduction_bg{
    border-top:0.01rem solid #f2f2f2;
    width:7.5rem;
    height:0.88rem;
    line-height: 0.88rem;
    background: #fff;
}
.introduction_bg span{
    margin-left: 0.3rem;
    font-size: 0.28rem;
    color:#000000;
}
.introduction_bg img{
    width:0.44rem;
    height:0.44rem;
    display:inline-block;
    margin-left: 0rem;
    margin-right: 0.3rem;
}
.introduction_bg .introduction_class{
    display: inline-block;
    width:1.4rem;
    margin-right: 0.3rem;
}
.introduction_view{
    margin-top: 0.14rem;
    position: relative;
}
.introduction_bg .introduction_color{
    color:#FFBA00;
    font-size: 0.28rem;
}
.info-cont {
    background: #fff;
    text-align: center;
    padding: 0.3rem 0;
}
.info-cont div {
    width: 50%;
    float: left;
    font-size: 0.32rem;
    font-weight: bold;
    position: relative;
}
.info-cont div:first-child:after {
    position: absolute;
    width: 1px;
    height: 100%;
    background: #f5f5f5;
    right: 0;
    top: 0;
    content: '';
}
.info-cont div p {
    margin: 0 0 0.2rem 0;
    font-size: 0.26rem;
    font-weight: normal;
}
.info-cont:after {
    clear: both;
    content: '';
    display: table;
}
.info-cont .link {
    display: block;
    width: 0.56rem;
    height: 0.56rem;
    position: absolute;
    background: url(../../image/store/wh.png) no-repeat;
    background-size: 100%;
    top: -0.09rem;
    right: 0.5rem;
}
.share-pop {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    bottom:0;
    right:0;
    display: none;
}
.share-over {
    width: 100%;
    height: 100%;
    background:rgba(0,0,0,0.5);
}
.share-cont {
    width: 5.4rem;
    height: 6rem;
    background: url(../../image/store/share-bg.png) no-repeat;
    background-size: 100%;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    padding: 0.5rem 0;
}
.share-cont p {
    text-align: center;
    font-size: 0.22rem;
    color: #666;   
}
.share-link, .share-link-wx {
    width:1.88rem;
    height:0.42rem;
    border-radius:0.1rem;
    display: block;
    border: 1px solid #454545;
    margin: 0.3rem auto 0 auto;
    text-align: center;
    line-height: 0.42rem;
    font-size: 0.28rem;
    display: none;
}
.share-tit {
    width: 3.46rem;
    display: block;
    margin: 0 auto;
}
.share-code {
    width: 2.8rem;
    height: 2.8rem;
    display: block;
    margin: 0.3rem auto 0.1rem auto;
}
.share-tip {
    width: 3.97rem;
    height: 2.35rem;
    position: absolute;
    right: 0.84rem;
    top: 0.54rem;
    background: url(../../image/store/share-tip.png) no-repeat;
    background-size: 100%;
    display: none;
}
.details_fenxiang{
	width:7.5rem;
	position: fixed;
	top:0;
	left: 0;
	bottom:0;
	right:0;
	background: rgba(0,0,0,0.2);
	z-index: 3;
	display: none;
}
.details_fxcon{
	width:7.5rem;
	background: #fff;
	position: fixed;
	bottom:0;
	left: 0;
	z-index: 3;
}
.details_fxtit{
	text-align: center;
	padding-top: 0.25rem;
	padding-bottom: 0.25rem;
	color:#666666;
	font-size: 0.22rem;
}
.details_fxlist{
	width:7.5rem;
	background: #F2F2F2; 
	padding-top: 0.5rem;
	padding-bottom: 0.5rem;
	/*padding-left: 0.3rem;*/
	padding-right: 0.3rem;
}
.details_fx_img{
	width:1.44rem;
	text-align: center;
	color:#999999;
	font-size: 0.22rem;
	padding-left: 0.8rem;

}
.details_fx_img img{
	display: inline-block;
	margin-bottom: 0.24rem;
	width:100%;
	height:100%;
}
.details_fx_cancel{
	height:0.88rem;
	background: #fff;
	color:#7E7E7E;
	font-size: 0.3rem;
	line-height: 0.88rem;
	text-align: center;
}