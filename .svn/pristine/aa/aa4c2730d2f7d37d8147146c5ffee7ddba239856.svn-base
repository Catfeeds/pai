.main_item{
    width: 100%;
    height: 0.88rem;
    text-align: center;
    line-height: 0.88rem;
    padding-left: 0.3rem;
    padding-right: 0.3rem;
    box-sizing: border-box;
    border-bottom: 0.01rem rgba(245,245,245,1) solid;
}
.main_item span{
    font-size:0.28rem;
    font-weight:400;
    color:rgba(0,0,0,1);
    width: 33.33%;
