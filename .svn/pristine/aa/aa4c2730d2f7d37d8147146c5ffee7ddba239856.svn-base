.header_nav{
    height: 1rem;
}
.title{
    width: 100%;
    height: 0.8rem;
    background: #FFF;
    position:fixed;
}
.title span.spans{
    text-align: center;
    font-size: 0;
    width: 3.6rem;
    border-radius:0.1rem;
    background: #FFF;
    position: absolute;
    left: 0;
    right: 0;
    margin:auto;
}
.title span{
    display: inline-block;
    width:1.8rem;
    font-size:0.26rem;
    font-weight:500;
    line-height:32px;
    background:rgba(242,242,242,1);
    color:rgba(153,153,153,1);
    margin-top: 0.1rem;
}
.title span.active{
    color:rgba(255,255,255,1);
    background:rgba(140,109,254,1);
}


.black{
    width: 100%;
    height: 0.1rem;
    background: #f5f5f5;
}
