.review_add{
	width:7.5rem;
}
.review_add_main{
	background: #fff;
}
.review_add_tit{
	padding-top: 0.17rem;
	padding-bottom: 0.17rem;
	margin-left: 0.3rem;
	margin-right: 0.3rem;
	border-bottom:0.01rem solid #f2f2f2;
}
.review_add_img{
	width:0.54rem;
	height:0.54rem;
}
.review_add_img img{
	width:100%;
	height:100%;
	object-fit: cover;
}
.review_add_star{
	margin-top: 0.05rem;
	width:2.6rem;
	height:0.54rem;
	overflow: hidden;
	position: relative;
}
.review_add_start_content{
	width:2.6rem;
	height:0.54rem;
	overflow: hidden;
}
.review_add_start_content img{
	width:0.42rem;
	height:0.42rem;
}
.review_add_start_content span {
	display: block;
	width: 0.42rem;
	height: 0.42rem;
	float: left;
	background: url(/static/image/review/wujiaoxing.png) no-repeat center;
	background-size: 100%;
	margin: 0 0.05rem 0 0;
}
.review_add_start_content .active {
	background: url(/static/image/review/ax.png) no-repeat center;
	background-size: 100%;
}
.review_add_start_content:after {
	clear: both;
	content: '';
	display: table;
}
.review_add_star .review_yew{
	width:2.6rem;
	height:0.54rem;
	position: absolute;
	left:-2.6rem;
	top:-0.05rem;
}
.review_add_tit p{
	margin-top: 0.08rem;
	font-size: 0.26rem;
	color:#000000;
	font-weight: 600;
	margin-left: 0.28rem;
	margin-right: 0.19rem;
}
.review_textarea{
	margin-left: 0.3rem;
	margin-right: 0.3rem;
	height:2.86rem;
}
.review_textarea textarea{
	width:100%;
	margin:0;
	text-align: left;
	padding-top: 0.28rem;
}
.review_add_com{
	background: #fff;
	margin-top: 0.2rem;
}
.review_add_view{
	border-bottom:1px solid #f2f2f2;
}
.review_add_list{
	background: #fff;
	border:none;
}
.review_add_list p{
	margin-left: 0;
}
.review_add_btn{
	width:6.9rem;
	height:0.88rem;
	border-radius: 0.18rem;
	background-image: linear-gradient(0deg, 
		#FFE500 0%, 
		#FFED50 100%), 
	linear-gradient(
		#FFE500, 
		#FFE500);
	text-align:center;
	line-height: 0.88rem;
	color:#000000;
	font-size: 0.3rem;
	font-weight: 600;
	margin:0 auto;
	margin-top: 0.49rem;
	display: block;
    border:none;
    outline: none;
}