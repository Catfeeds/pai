body{
	background: #fff;
}
.login_register{
	margin: 0.54rem 0 0 0;
	text-align: center;
	font-size: 0.26rem;
	color: #151515;
}
.login_list{
	width:7.5rem;
}
.login_inp{
	margin-left: 0.3rem;
	margin-right: 0.3rem;
	border-bottom:1px solid #eeeeee;
	position: relative;
}
.login_inp span {
	width: 0.95rem;
	position: absolute;
	text-align: center;
	height: 0.24rem;
	border-right: 1px solid #aaa;
	top: 0;
	bottom: 0;
	left: 0;
	font-size: 0.28rem;
	margin: auto;
	line-height: 0.24rem;
}
.login_inp .pd {
	margin: 0 0 0 1.57rem;
}
.login_inp input{
	width: 100%;
	padding-top: 0.35rem;
	padding-bottom: 0.35rem;
	font-size: 0.28rem;
	background: #fff;
}
.login_inp a{
	position: absolute;
	right:0.2rem;
	top:0.45rem;
	font-size: 0.24rem;
	color:#2b2b2b;
}
.login_none{
	border:none;
}
.login_btn{
	width:6.9rem;
	margin:0 auto;
	background-image: linear-gradient(0deg, 
		#DDDDDD 0%, 
		#EFEFEF 100%), 
	linear-gradient(
		#DDDDDD, 
		#DDDDDD);
	color:#aaaaaa;
	height:0.88rem;
	border-radius: 0.18rem;
	text-align: center;
	line-height: 0.88rem;
	font-size: 0.32rem;
	margin-top: 1.5rem;
	font-weight: 600;
}
.login_btn_yew{
	background-image: linear-gradient(0deg, 
		#FFE500 0%, 
		#FFED50 100%), 
	linear-gradient(
		#FFE500, 
		#FFE500);
	color:#000000;
}
.login_remark{
	width:42%;
	margin:0 auto;
	height:0.5rem;
	font-size: 0.24rem;
	position: relative;
	line-height: 0.5rem;
	margin-top: 0.5rem;
}
.login_line{
	position:absolute;
	left:50%;
	color:#868686;
}
.login_newuser{
	float: left;

}
.login_cancel_icon,.login_eye_icon{
	width:0.44rem;
	height:0.44rem;
	position: absolute;
	top:0.39rem;
	
}
.login_cancel_icon img,.login_eye_icon img{
	width:100%;
	height:100%;
}
.login_cancel_icon{
	right:2.61rem;
	display: none;
}
.login_eye_icon{
	right:0;
}
#pwd2{
	display: none;
}
.login_eye_line{
	width:0.02rem;
	height:0.24rem;
	background: #f2f2f2;
	position: absolute;
	top:0.5rem;
	right:1.67rem;
}
.login-toggle {
	padding: 0 0.3rem;
	height: 1.5rem;;
	line-height: 1.5rem;
	margin: 0 0 0.5rem 0;
}
.login-toggle span {
	margin: 0 1rem 0 0;
	font-size: 0.32rem;
	color: #d3d3d3;
	font-weight: bold;
	display: inline-block;
	height: 100%;
}
.login-toggle .active {
	color: #151515;
	position: relative;
}
.login-toggle .active:after {
	position: absolute;
	background: #FFE500;
	width: 1rem;
	height: 0.1rem;
	bottom: 0.2rem;
	left: 0;
	right: 0;
	margin: auto;
	content: '';
}
.login_forget {
	margin: 0.3rem 0.3rem 0 0;
	color: #555;
	font-size: 0.28rem;
}
.register_code {
	/* border: 0 !important; */
}
.wx-login {
	width: 1.2rem;
	height: 1.2rem;
	margin: 1rem auto;
	text-align: center;
	display: none;
}
.wx-login img {
	width: 100%;
}
.wx-login p {
	font-size: 0.24rem;
	color: #aaa;
	margin: 0.2rem 0 0 0;
}
.copy {
    padding: 0 0.3rem;
    position: fixed;
    bottom: 0.4rem;
    color: #aaa;
    font-size: 0.24rem;
    line-height: 0.4rem;
    text-align: center;
  }