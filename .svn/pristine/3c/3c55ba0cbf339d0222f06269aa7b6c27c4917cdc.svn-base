    /**
     * 分享活动详情（活动列表页）
     */
    public function share_list()
    {
        $redis = RedisCache::getInstance();
        $page = input('param.page/d',1);
        $page_size = input('param.page_size/d',9);
        $m_id = $this->m_id;

        $popularity_goods = new PopularityGoodsService();
        //预上架处理(十二位置商品有空缺时)(20180930)
        $popularity_goods->get_shangajia();

        $p_goods = new PopularityGoodsService();
        //ajax请求预上架商品
        if(\request()->isAjax()){
            //预上架商品
            $where = [
                'pg_state'=>1,
                'pg_type'=>['<>',3],
                'is_show'=>1,
                'pg_status'=>2,
                'end_time'=>['>',time()]
            ];
            $list['data3'] = $p_goods -> get_share_list($where,'pg_position asc,pg_sortnum desc',$page,$page_size,$m_id);
            return $list['data3'];
        }

        //十二件商品缓存redis
        $list = $redis->get('popularitygoods');
        if($list){
            $list = json_decode($list,true);
        }else{
            //精选推荐
            $where1 = [
                'pg_state'=>1,
                'pg_type'=>['<>',3],
                'is_show'=>1,
                'pg_status'=>1,
                'end_time'=>['>',time()],
                'pg_position'=>['in',[1,2,3]]
            ];
            $list = array();
            $list['data1'] = $popularity_goods->get_recommendation($where1,'pg_id,pg_name,pg_img,pg_s_img,pg_market_price,pg_price,pg_membernum,pg_position');
            //活动商品
            $where = [
                'pg_state'=>1,
                'pg_type'=>['<>',3],
                'is_show'=>1,                   //首页展示 1展示 2不展示
                //'is_recommendation'=>2,         //是否精选1精选 2非精选
                'pg_status'=>1,                 //商品时航迹状态 1上架 2预上架 3下架
                'end_time'=>['>',time()],
                'pg_position'=>['in',[4,5,6,7,8,9,10,11,12]]
            ];
            $list['data2'] = $p_goods -> get_share_list($where,'pg_position asc',$page,9,$m_id);
            //预上架商品
            $where = [
                'pg_state'=>1,
                'pg_type'=>['<>',3],
                'is_show'=>1,
                'pg_status'=>2,
                'end_time'=>['>',time()]
            ];
            $list['data3'] = $p_goods -> get_share_list($where,'pg_position asc,pg_sortnum desc',$page,$page_size,$m_id);
            $redis->set('popularitygoods',json_encode($list),1200);
        }

        //用户是否登录
        $list['is_login'] = $m_id ? 1 : 0;

        //吖吖公告  永久缓存吖吖公告,有新公告时删除此redis
        $yy_gg = $redis->get('yy_gg');
        if($yy_gg){
            $yy_gg = json_decode($yy_gg,true);
        }else{
            //人气王吖吖通告
            $article_type = new ArticleTypeService();
            $where2 = [
                'at_id'=>32
            ];
            $at_id = $article_type->articleTypeValue($where2,'at_id');
            $article = new ArticleService();
            $where3 = [
                'a_type'=>$at_id,
                'a_state'=>0
            ];
            $yy_gg = $article->articleList($where3,'*','a_id desc');
            $redis->set('yy_gg',json_encode($yy_gg));
        }

        //默认展示最新10条擂主信息
        $popularity_member = $redis->lRange('popularity_member',0,9);
        if($popularity_member){
            //获取redis数据并赋值给$list['info']
            foreach($popularity_member as &$v){
                $v = json_decode($v,true);
            }
            $list['info'] = $popularity_member;
        }else{
            //无redis时查询十条最新数据
            $p_member = new PopularityMemberService();
            $where = [
                'pm.pm_state'=>['in',[2,3]],
            ];
            $list['info'] = $p_member->join_member($where,'pm_id desc','m.m_name,m.m_avatar,m.m_s_avatar,pg_name,pm.pm_state',1,10);
            //循环加入redis列
            foreach($list['info'] as $k => $v){
                $redis->rPush('popularity_member',json_encode($v));
            }
        }
        $this->assign('list',$list);
        $this->assign('yy_gg',$yy_gg);
        $this->assign('header_title','分享活动详情');
        return view();
    }


