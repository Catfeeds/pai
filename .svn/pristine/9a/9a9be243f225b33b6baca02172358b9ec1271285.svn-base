.message {
    margin: 1.5rem 0 0 0;
}
.message-list {
    text-align: center;
    margin: 0 0.5rem;
}
.message-time {
    background: rgba(0, 0, 0, 0.32);
    border-radius: 0.12rem;
    padding: 0.1rem 0.2rem;
    font-size: 0.22rem;
    color: #fff;
}
.message-item {
    border-radius: 0.18rem;
    background: #fff;
    padding: 0 0.4rem 0.4rem 0.4rem;
    margin: 0.3rem 0 0.8rem 0;
}
.message-item h3 {
    position: relative;
    font-size: 0.28rem;
    height: 1rem;
    line-height: 1rem;
    font-weight: bold;
    text-align: left;
    border-bottom: 1px solid #E2E2E2;
    margin: 0 0 0.3rem 0;
    padding: 0 2rem 0 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.message-item h3 small {
    font-weight: normal;
    color: #333333;
    font-size: 0.24rem;
    position: absolute;
    right: 0;
    background: url(/static/icon/publish/icon_nav_jump@2x.png) no-repeat center right;
    background-size: 0.42rem;
    padding-right: 0.45rem;
}
.message-ms {
    text-align: left;
    font-size: 0.26rem;
}
.message-ms p {
    color: #333333;
    font-size: 0.26rem;
}
.message-ms span {
    color: #B1B2C3;
}
.message-shop {
    position: relative;
}
.message-shop img {
    width: 1.32rem !important;
    height: 1.32rem !important;
    position: absolute;
    left: 0;
    top: 0;
    border-radius: 0.06rem;
}
.message-shop div {
    margin: 0 0 0 1.52rem;
    height: 1.32rem;
    text-align: left;
    padding: 0.1rem 0;
    line-height: 0.56rem;
    font-size: 0.34rem;
}
.message-shop div p {
    margin: 0;
    color: #333333;
    font-size: 0.26rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.message-shop div span {
    font-size: 0.24rem;
    color: #AAAAAA;
}
.message-shop div i {
    font-style: normal;
    font-size: 0.14rem;
}
.no-message {
    margin: 2rem auto;
    display: none;
}
.no-message img {
    width: 2.1rem;
    height: 2.1rem;
    display: block;
    margin: 0 auto;
}
.no-message p {
    text-align: center;
    color: #AAAAAA;
    font-size: 0.26rem;
}