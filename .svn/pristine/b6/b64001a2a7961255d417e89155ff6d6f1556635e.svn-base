body {
    background: #fff;
}
.pay_pwd_view{
    width:7.5rem;
}
.pay_pwd_con{
    width:4.6rem;
    margin:0 auto;
    margin-top: 0.87rem;
}
.pay_pwd_con p{
    font-size: 0.34rem;
    color:#000000;
    font-weight:600 ;
    text-align: center;
    margin-top: 0.36rem;
}
.pay_pwd_con span{
    font-size: 0.24rem;
    color:#999999;
    display: block;
    text-align: center;
    margin-top: 0.19rem;
}
.pay_pwd_img{
    width:2.36rem;
    height:1.9rem;
    margin:0 auto;
}
.pay_pwd_img img{
    width:100%;
    height:100%;
}
.pay-form {
    margin: 0.5rem;
}
.pay-form input[type="password"] {
    width: 100%;
    display: block;
    height: 1rem;
    line-height: 1rem;
    padding: 0 0 0 0.1rem;
    border: 0;
    border-bottom: 1px solid #E2E2E2;
    margin: 0 0 0.3rem 0;
    border-radius: 0;
}
.pay-form input[type="submit"] {
    display: block;
    width: 100%;
    height: 0.88rem;
    background-image: linear-gradient(0deg,
    #FFE500 0%,
    #FFED50 100%),
    linear-gradient(
            #FFE500,
            #FFE500);
    padding: 0;
    text-align: center;
    color: #000;
    font-size: 0.32rem;
    border: 0;
    margin: 1rem 0 0 0;
    font-weight: 600;
}