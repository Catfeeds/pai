{extend name="common/base" /}
{block name="style"}
	<link rel="stylesheet" type="text/css" href="__ADMIN_CSS__/add_admin.css">
{/block}
{block name="script"}
<script type="text/javascript" src="__ADMIN_JS__/add_role.js"></script>
{/block}
{block name="content"}
<form method="post" action="{:url('Appedition/add')}" id="add_store_category_form" enctype="multipart/form-data">
	<div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-body">
            	<div class="form-group from_add_authority">
                    <label>添加APP版本</label>
                </div>
                <div class="form-group from_add_margin">
                    <label>版本号</label>
                    <input type="text" class="form-control" placeholder="版本号" required name="app_version" {notempty name="$info['app_version']"} value="{$info.app_version}" {/notempty}>
                </div>
                <div class="form-group">
                    <label>更新信息</label>
                    <textarea class="form-control" name="updatemsg" required placeholder="更新信息">{$info.updatemsg ?? ''}</textarea>
                </div>
                <div class="form-group">
                    <label>下载地址链接</label>
                    <input type="text" class="form-control" placeholder="下载地址链接" required name="downloadurl" {notempty name="$info['downloadurl']"} value="{$info.downloadurl}" {/notempty}>
                </div>
                <div class="form-group">
                    <label>更新类型 </label>
                    <select name="updatetype" class="form-control">
                        <option value="0" {notempty name="$info"}{if condition="$info.updatetype == 0"}selected{/if}{/notempty}>不更新</option>
                        <option value="1" {notempty name="$info"}{if condition="$info.updatetype == 1"}selected{/if}{/notempty}>正常更新</option>
                        <option value="2" {notempty name="$info"}{if condition="$info.updatetype == 2"}selected{/if}{/notempty}>强制更新</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>版本机型 </label>
                    <select name="app_type" class="form-control">
                        <option value="1" {notempty name="$info"}{if condition="$info.app_type == 1"}selected{/if}{/notempty}>安卓</option>
                        <option value="2" {notempty name="$info"}{if condition="$info.app_type == 2"}selected{/if}{/notempty}>苹果</option>
                    </select>
                </div>
            </div>
            <div class="form-group text-right" style="margin-top:20px">
                    <input type="hidden" {notempty name="$info.id"} value="{$info.id}"  {/notempty} name="id"/>
                    <input type="submit" class="btn btn-primary" value="保存信息"/>
                    <input  type="button" class="btn btn-default" value="取消操作"/>
            </div>
        </div>
    </div>
    </form>
{/block}

