/*Plugin CSS*/
.str_wrap {
	overflow:hidden;
	zoom:1;
	width:100%;
	font-size:0.22rem;
	line-height:0.6rem;
	height: 0.6rem !important;
}

.str_wrap.str_active {
	background:#f1f1f1;
}
.str_move { 
	white-space:nowrap;
	position:absolute; 
	top:0; 
	left:0;
	cursor:move;
	top: 0;
}
.str_move_clone {
	display:inline-block;
	/* //display:inline; */
	/* //zoom:1; */
	vertical-align:top;
	position:absolute; 
	left:100%;
	top:0;
}
.str_vertical .str_move_clone {
	left:0;
	top:100%;
	top: 0;
}
.str_down .str_move_clone {
	left:0;
	bottom:100%;
	top: 0;
}
.str_vertical .str_move,
.str_down .str_move {
	white-space:normal;
	width:100%;
	top: 0;
}
.str_static .str_move,
.no_drag .str_move,
.noStop .str_move{
	cursor:inherit;
}
.str_wrap img {
	max-width:none !important;	
}