.about_main{
    margin-top: 0.6rem;
    margin-bottom: 0.58rem;
}
.about_img{
    width:1.6rem;
    height: 1.6rem;
    margin:0 auto;
}
.about_img img{
    width:100%;
    height:100%;
}
.about_main p{
    text-align: center;
    color:#000000;
    font-size: 0.24rem;
}
.about_list{
background: #fff;
    padding:0.3rem;
    border-bottom: 1px solid #f2f2f2;
}
.about_list img{
    width:0.42rem;
    height:0.42rem;
    float: right;
}
.about_list span{
    font-size: 0.28rem;
    color:#000000;
}