html{
    width: 100%;
    height: 100%;
}
body{
    width: 100%;
    height: 100%;
    background: #2e3fa3;
}
.promoters{
    width:100%;
    height:12.46rem;
    background: url("../../image/promoters/bg_hehuoren@2x.png") no-repeat center center;
    background-size:100% 100%; 
}
.promoters_content{
    width: 6.9rem;
    background:rgba(255,255,255,1);
    border-radius:16px;
    box-sizing: border-box;
    padding: 0.3rem 0.6rem 0.5rem 0.6rem ;
    box-shadow:0px 18px 54px 0px rgba(50,67,166,0.26);
    position: absolute;
    top:5.77rem;
    left:0;
    right: 0;
    margin: auto;
}
.promoters_content p.join_title{
    font-size:0.3rem;
    font-weight:600;
    color:rgba(51,51,51,1);
    text-align: center;
    margin-bottom: 0.36rem;
}
.promoters_content_tips p{
    font-size:0.28rem;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:0.4rem;
}
.promoters_content p.join_zixun{
    font-size:0.24rem;
    font-weight:400;
    color:rgba(170,170,170,1);
    text-align: center;
    margin-top: 0.85rem;
    margin-bottom: 0.24rem;
}
.promoters_content_btns a{
    width:6rem;
    height:0.88rem;
    display: block;
    text-align: center;
    line-height: 0.88rem;
    background:linear-gradient(0deg,rgba(255,212,0,1) 0%,rgba(255,229,0,1) 100%);
    border-radius:0.18rem;
    color:rgba(51,51,51,1);
    font-weight: bold;
}
.promoters_content_btns a:nth-child(2){
    background:#FFBA00;
    color:rgba(51,51,51,1);
    margin-top: 0.36rem;
}
.promoters_alert{
    width: 5rem;
    height: 1rem;
    display: block;
}