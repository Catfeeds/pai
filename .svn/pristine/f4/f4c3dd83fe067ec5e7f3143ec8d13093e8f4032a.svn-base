@charset "utf-8";
* {	margin:0;padding:0;}
html,body,form,fieldset,p,div,h1,h2,h3,h4,h5,h6 {-webkit-text-size-adjust:none;}
body {min-width:320px;font-family:"Microsoft Yahei", Helvetica, STHeiTi, sans-serif;font-size:14px;line-height:1.2em;background-color: #f0f0f2;color: #333333;}
form,img,table,td,fieldset {border:0;}
table{border-collapse:collapse;border-spacing:0;}
em,i,address,s{font-style:normal; text-decoration:none;}
ul,ol {list-style-type:none;}
h1,h2,h3,h4,h5,h6 ,th{font-size:100%;}
input,textarea,img {vertical-align:middle;font-family:"Microsoft Yahei"，Arial;}
a{-webkit-tap-highlight-color:rgba(0, 0, 0, 0);}
a{text-decoration:none;color:#6b2f17;}
a:hover {color:#D20000;text-decoration:none;}

input{-webkit-border-radius:0;-moz-box-sizing: content-box;-webkit-box-sizing: content-box;box-sizing: content-box;}/*-webkit-appearance:none;*/

button,input,select,textarea {font-size:100%;vertical-align:middle;outline:none;}
textarea {resize:none;}
button,input[type="button"],input[type="reset"],input[type="submit"] {cursor:pointer;-webkit-appearance:button;-moz-appearance:button;border:none;}
input:focus:-moz-placeholder,input:focus::-webkit-input-placeholder {color:transparent;}
button::-moz-focus-inner,input::-moz-focus-inner {padding:0;border:0;}

a, img {-webkit-touch-callout: none;}
html, body {-webkit-user-select: none;user-select: none;}
.red{ color:#ef2f76;}

/* html5 */
article, aside, dialog, figure, footer, header, 
hgroup, nav, section {display:block;}
audio,canvas,video{display: inline-block;*display: inline;*zoom: 1;}
audio:not([controls]){display: none;height: 0;}
.lh2{line-height:2;}.lh3{line-height:3;}.fred {color:#D20000;}
.wrap-box{border:#e6e6e6 1px solid;background:#FFF;margin:0 5px;}
.clearfix:after{display:block;content:'';clear:both;visibility:hidden;}
.clear{clear:both;line-height:normal;}
.hide {display:none;}
.fl {float:left;}
.fr {float:right;}

/* 公共样式 */
.grey{color: #999;}
.grey6{color: #666;}
.line_grey{border-bottom: 1px solid #e5e5e5;}