    /**
     * 考核指标
     * 邓赛赛
     */
    public function assessment_standard(){
        //获取推广员指标分类ID
        $article_type = new ArticleTypeService();
        $at_id = $article_type->articleTypeValue(['at_name'=>'推广员考核指标'],'at_id');
        $content = '';
        if($at_id){
            //获取推广员指标内容
            $article = new ArticleService();
            $content = $article->articleValue(['a_type'=>$at_id],'a_description');
            $content = htmlspecialchars_decode($content);
        }
        $this->assign('content',$content);
        $this->assign('header_title','考核指标');
        return view();
    }

