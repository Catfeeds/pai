/* 只要在样式里面加一句去掉css去掉iPhone、iPad的默认按钮样式就可以了！~ （不要写在class里，哦） */

input[type="button"], input[type="submit"], input[type="reset"] {

    -webkit-appearance: none;

}

textarea {  -webkit-appearance: none;}

/* 如果还有圆角的问题， */

.button{ border-radius: 0; }


html {
    background:#FFFFFF;
}
/* header */
header {
    width: 100%;
    height: 100%;
    background :rgba(255,255,255,1);
}
header a {
    display: block;
    width: 0.56rem;
    height: 0.56rem;
    margin-top: 0.56rem;
    margin-left: 0.3rem;
}
header a img {
    display: block;
    width: 0.56rem;
    height: 0.56rem;
}
/* main */
main .nav{
    width:2.33rem;
    height:0.46rem;
    margin-top:0.6rem;
    margin-left:0.41rem;
}
main .nav p {
    font-size: 0.43rem;
    font-family: PingFangSC-Semibold;
    font-weight: 400;
}
main .phone {
    height:0.22rem;
    margin-left:0.53rem;
    margin-top:0.76rem;
}
main .phone p {
    float:left;
    font-size: 0.28rem;
    font-family: PingFangSC-Regular;
}
main .phone input {
    float:left;
    margin-top:0.05rem;
    margin-left:0.2rem;
    font-size:0.28rem;
    border:none;
    border-left:1px solid #EEEEEE;
    padding-left:0.2rem;
}
main .solid {
    width:5.8rem;
    height:0.01rem;
    margin-left:0.3rem;
    margin-top:0.29rem;
    background-color: #EEEEEE;
}
main .pass {
    width:5.8rem;
    height:0.99rem;
    margin-left:0.3rem;
    border-bottom:1px solid #EEEEEE;
}
main .pass input {
    float:left;
    width:2rem;
    height:0.26rem;
    margin-left:0.28rem;
    margin-top:0.44rem;
    border:none;
}
main .pass button {
    float:right;
    font-size: 0.28rem;
    border:none;
    background-color:#FFFFFF;
    margin-top:0.42rem;
    margin-right:0.1rem;
}
main .btnone {
    width:5.8rem;
    height:0.88rem;
    margin-left:0.3rem;
    margin-top:1.12rem;
    text-align: center;
    line-height: 0.88rem;
    font-size:0.32rem;
    font-weight: 400;
    color:rgba(170,170,170,1);
    border-radius: 0.18rem;
    background:rgba(231,231,231,1);
}
main .btntwo {
    color:rgba(0,0,0,1);
    background-color: #FFE500;
}