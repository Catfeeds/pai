}
.qianggou{
    width:7.5rem;
    height:0.8rem;
    text-align: center;
    line-height: 0.8rem;
    font-size:0.26rem;
    font-weight:bold;
    color:rgba(255,255,255,1);
    background:linear-gradient(90deg,rgba(255,161,116,1),rgba(255,199,107,1));
}
.qianggou span{
    opacity:0.84;
}
.details_pingjia_imgs{
    width: 7.5rem;
    height: 2rem;
}
.details_pingjia_imgs img{
    width:1.5rem;
    height:1.5rem;
